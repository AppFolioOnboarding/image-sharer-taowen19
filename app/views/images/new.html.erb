<% if @image.errors.any? %>
  The form contains <%= pluralize(@image.errors.count, "error") %>
  <ul>
    <% @image.errors.full_messages.each do |msg| %>
      <li> <%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= simple_form_for Image.new do |f| %>
  <%= f.input :url %>
  <%= f.input :tags, input_html: { value: '' }%>
  <%= f.label 'Separate your tags by space please!' %>
  <%= f.button :submit %>
<% end %>